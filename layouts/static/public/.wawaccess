wawaccess do
  strategy :deny_all

  # .wawaccess files are never served
  match /.wawaccess$/ do
    deny
  end

  # We serve all as static file by default
  match file do
    static
  end
  
  # When something is not found, we look in the pages wawaccess
  match true do
    apply "/pages/#{served_file}"
  end

end